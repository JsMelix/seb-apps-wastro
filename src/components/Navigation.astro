---
const currentPath = Astro.url.pathname;
---

<header>
    <div class="logo">Seb <br> Apps</div>
    <nav>
        <ul>
            <li><a href="/" class={currentPath === "/" ? "active" : ""}>Home Page</a></li>
            <li><a href="/about" class={currentPath === "/about" ? "active" : ""}>About Me</a></li>
            <li><a href="/courses" class={currentPath === "/courses" ? "active" : ""}>Courses</a></li>
            <li><a href="/blog" class={currentPath === "/blog" ? "active" : ""}>Blog</a></li>
        </ul>
    </nav>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 2rem;
        width: 80%;
        margin: 0 auto;
        position: relative;
        z-index: 100;
    }

    .logo {
        font-family: 'Press Start 2P', cursive;
        font-size: 1.5rem;
        color: cyan;
        text-transform: uppercase;
        text-shadow: 2px 2px 4px rgba(0, 255, 255, 0.3);
    }

    nav ul {
        display: flex;
        gap: 2rem;
        list-style: none;
        margin: 0;
        padding: 0;
    }

    nav a {
        color: white;
        text-decoration: none;
        font-size: 1rem;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        padding: 0.5rem 1rem;
        border-radius: 4px;
        overflow: hidden;
    }

    nav a::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 255, 255, 0.1);
        transform: translateX(-100%);
        transition: transform 0.3s ease;
    }

    nav a:hover::before {
        transform: translateX(0);
    }

    nav a:hover {
        color: cyan;
        transform: translateY(-2px);
        text-shadow: 0 0 8px rgba(0, 255, 255, 0.5);
    }

    nav a.active {
        color: cyan;
        font-weight: bold;
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.2);
    }

    nav a::after {
        content: '';
        position: absolute;
        width: 0;
        height: 2px;
        bottom: 0;
        left: 50%;
        background-color: cyan;
        transition: all 0.3s ease;
        transform: translateX(-50%);
    }

    nav a:hover::after {
        width: 80%;
    }

    nav a.active::after {
        width: 80%;
        box-shadow: 0 0 10px rgba(0, 255, 255, 0.5);
    }

    @media (max-width: 768px) {
        header {
            flex-direction: column;
            gap: 1.5rem;
            text-align: center;
            width: 90%;
        }

        nav ul {
            flex-direction: column;
            gap: 1rem;
        }

        nav a:hover {
            transform: translateX(5px);
        }
    }
</style>
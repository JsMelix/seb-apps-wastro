---
const currentPath = Astro.url.pathname;
---

<header>
    <div class="logo">Seb <br> Apps</div>
    <nav>
        <ul>
            <li><a href="/" class={currentPath === "/" ? "active" : ""}>Home Page</a></li>
            <li><a href="/about" class={currentPath === "/about" ? "active" : ""}>About Me</a></li>
            <li><a href="/courses" class={currentPath === "/courses" ? "active" : ""}>Courses</a></li>
            <li><a href="/blog" class={currentPath === "/blog" ? "active" : ""}>Blog</a></li>
        </ul>
    </nav>
</header>

<style>
    header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.5rem;
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
        position: relative;
        z-index: 100;
    }

    .logo {
        font-family: 'Press Start 2P', cursive;
        font-size: clamp(1rem, 2.5vw, 1.5rem);
        color: cyan;
        text-transform: uppercase;
        text-shadow: 2px 2px 4px rgba(0, 255, 255, 0.3);
    }

    nav ul {
        display: flex;
        gap: clamp(1rem, 3vw, 2rem);
        list-style: none;
        margin: 0;
        padding: 0;
    }

    nav a {
        color: white;
        text-decoration: none;
        font-size: clamp(0.8rem, 2vw, 1rem);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        padding: 0.5rem;
    }

    @media (max-width: 768px) {
        header {
            flex-direction: column;
            gap: 1.5rem;
            padding: 1rem;
        }

        nav ul {
            flex-direction: column;
            align-items: center;
            gap: 1rem;
        }

        nav a {
            display: block;
            padding: 0.5rem 1rem;
        }
    }
</style>
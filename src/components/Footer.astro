<style>
    .footer {
        color: #ffffff;
        padding: 4rem 1.5rem 2rem;
        position: relative;
        width: 100%;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 3rem;
    }

    .footer-section {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .logo h2 {
        font-size: clamp(1.5rem, 3vw, 2rem);
    }

    .social-icons {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        justify-content: flex-start;
    }

    @media (max-width: 768px) {
        .footer {
            padding: 3rem 1rem 1.5rem;
        }

        .footer-section {
            text-align: center;
            align-items: center;
        }

        .social-icons {
            justify-content: center;
        }
    }
</style>

    .brand .description {
        color: #a0a0a0;
        margin: 0.5rem 0;
        font-size: 0.95rem;
    }

    .logo h2 {
        font-size: 2rem;
        margin: 0;
        background: linear-gradient(135deg, #3245ff 0%, #bc52ee 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-weight: 700;
    }

    .social-icons {
        display: flex;
        gap: 1rem;
        margin-top: 1rem;
    }

    .social-icons a {
        color: #ffffff;
        background-color: rgba(255, 255, 255, 0.08); /* Reducida la opacidad */
        padding: 0.7rem;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        backdrop-filter: blur(0); /* Añadido */
    }

    .social-icons a:hover {
        background-color: #3245ff;
        transform: translateY(-3px);
    }

    .footer-section h3 {
        color: #ffffff;
        font-size: 1.2rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .links ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .links ul li {
        margin-bottom: 0.8rem;
    }

    .links a {
        color: #ffffff;  /* Cambiado para mejor contraste */
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }

    .contact-info p {
        color: #ffffff;  /* Cambiado para mejor contraste */
        display: flex;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
    }

    .copyright p {
        color: #ffffff;  /* Cambiado para mejor contraste */
        font-size: 0.9rem;
        margin: 0;
    }

    @media (max-width: 968px) {
        .footer-content {
            grid-template-columns: 1fr 1fr;
        }
        
        .brand {
            grid-column: 1 / -1;
        }
    }

    @media (max-width: 640px) {
        .footer-content {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .footer-section {
            text-align: center;
            align-items: center;
        }

        .social-icons {
            justify-content: center;
        }

        .contact-info p {
            justify-content: center;
        }
        @media (max-width: 768px) {
        .footer {
            padding: 3rem 1.5rem 1.5rem;
        }

        .footer-content {
            grid-template-columns: 1fr;
            gap: 2rem;
        }

        .footer-section {
            align-items: center;
            text-align: center;
        }

        .links ul {
            align-items: center;
        }

        .social-icons {
            justify-content: center;
        }

        .logo h2 {
            font-size: 1.5rem;
        }
    }

    @media (max-width: 480px) {
        .footer {
            padding: 2rem 1rem 1rem;
        }

        .social-icons {
            gap: 0.8rem;
        }

        .social-icons a {
            padding: 0.4rem;
        }

        .links ul {
            gap: 0.8rem;
        }
    }
</style>